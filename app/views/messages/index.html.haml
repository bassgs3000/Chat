.row-fluid
  %h2 Chat
  - if user_signed_in?
    Signed in as #{current_user.username}
    = link_to 'Sign out', destroy_user_session_path, method: :delete
    - if @room.private?
      #invite= link_to 'Add user to private chatroom', "#"
      #invitequery= text_field_tag 'inviteform', "", placeholder: "Enter username"

  - else
    = link_to 'Sign in', new_user_session_path
    |
    = link_to 'Sign up', new_user_registration_path
  %br

- if user_signed_in?
  Session info: 
  %span#debug= session[:chat_identifier]
  %br
  = link_to "Return to Lobby", lobby_path
  %br
  .messages.inline= render 'messages'
  - if @private
    .members.inline= render 'members'
  %br.clearBoth

  .row-fluid
    .chatform.inline= render 'form'
    - if current_user.id == @owner.id
      #editmember= link_to "Edit Member", "#"
      .editmembers.inline= select_tag "users", options_from_collection_for_select(@members, "id", "username"), include_blank: true
      #rmmember.inline= link_to "Remove Member", '#'
    %br.clearBoth

  = subscribe_to "/" + session[:chat_identifier]
